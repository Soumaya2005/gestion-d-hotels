                    <tr><td colspan="9" class="text-center">No reservations found.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="dashboard-section mt-20">
        <h3>{% if editReservation %}Edit reservation{% else %}Add a new reservation{% endif %}</h3>
        {% include 'dashboard/_reservation_form.html.twig' with { editReservation: editReservation, rooms: rooms } %}
    </div>

    <!-- Users Section -->
    <div id="users" class="dashboard-section">
        <h2>Manage Users</h2>
        <form method="get" class="search-form">
            <input type="text" name="user_search" placeholder="Search by email" value="{{ search.user ?? '' }}">
            <button type="submit" class="btn">Search</button>
            <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">Clear</a>
        </form>

        <table class="dashboard-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Reservations</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users|default([]) %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% for role in user.roles %}
                                <span class="status-badge status-active">{{ role }}</span>
                            {% endfor %}
                        </td>
                        <td>{{ user.reservations|length }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_dashboard') }}?edit_user={{ user.id }}#users" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="{{ path('app_dashboard') }}?delete_user={{ user.id }}#users" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="5" class="text-center">No users found.</td></tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="dashboard-section mt-20">
            <h3>{% if editUser %}Edit User{% else %}Add New User{% endif %}</h3>
            <form method="post" class="dashboard-form">
                {% if editUser %}
                    <input type="hidden" name="user_id" value="{{ editUser.id }}">
                {% endif %}
                
                <div class="form-group">
                    <label>Email:</label>
                    <input type="email" name="email" required value="{{ editUser ? editUser.email : '' }}">
                </div>

                <div class="form-group">
                    <label>Password:</label>
                    <input type="password" name="password" {% if not editUser %}required{% endif %}>
                    {% if editUser %}
                        <small>Leave empty to keep the current password</small>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label>Roles:</label>
                    <select name="roles[]" multiple class="form-control">
                        <option value="ROLE_USER" {% if editUser and 'ROLE_USER' in editUser.roles %}selected{% endif %}>User</option>
                        <option value="ROLE_ADMIN" {% if editUser and 'ROLE_ADMIN' in editUser.roles %}selected{% endif %}>Admin</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-success">{% if editUser %}Update{% else %}Save{% endif %}</button>
                {% if editUser %}
                    <a href="{{ path('app_dashboard') }}#users" class="btn btn-secondary">Cancel</a>
                {% endif %}
            </form>
        </div>
    </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Data for charts
        const monthNames = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
        const reservationsData = {{ analytics.monthlyReservations|json_encode|raw }};
        const revenueData = {{ analytics.monthlyRevenue|json_encode|raw }};
        
        // Configuration des couleurs
        const primaryColor = '#3498db';
        const accentColor = '#e82574'; // Rose/fuchsia du site
        
        // Graphique des réservations mensuelles
        const reservationsCtx = document.getElementById('reservationsChart').getContext('2d');
        new Chart(reservationsCtx, {
            type: 'bar',
            data: {
                labels: monthNames,
                datasets: [{
                    label: 'Reservations',
                    data: reservationsData,
                    backgroundColor: primaryColor,
                    borderColor: primaryColor,
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            precision: 0 // Nombre entier uniquement
                        }
                    }
                }
            }
        });
        
        // Graphique des revenus mensuels
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
        new Chart(revenueCtx, {
            type: 'line',
            data: {
                labels: monthNames,
                datasets: [{
                    label: 'Revenue (€)',
                    data: revenueData,
                    backgroundColor: 'rgba(232, 37, 116, 0.2)',
                    borderColor: accentColor,
                    borderWidth: 2,
                    tension: 0.3,
                    fill: true,
                    pointBackgroundColor: accentColor
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return value + ' €';
                            }
                        }
                    }
                }
            }
        });
        
        // Navigation active dans la sidebar
        const setActiveLink = () => {
            const hash = window.location.hash || '#analytics';
            const links = document.querySelectorAll('.dashboard-nav-link');
            
            links.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === hash) {
                    link.classList.add('active');
                }
            });
        };
        
        // Initialiser le lien actif au chargement
        setActiveLink();
        
        // Mettre à jour le lien actif quand le hash change
        window.addEventListener('hashchange', setActiveLink);
        
        // Toggle sidebar sur mobile
        const sidebarToggle = document.getElementById('sidebar-toggle');
        const sidebar = document.querySelector('.dashboard-sidebar');
        
        if (sidebarToggle && sidebar) {
            sidebarToggle.addEventListener('click', function() {
                sidebar.classList.toggle('active');
            });
            
            // Fermer la sidebar quand on clique sur un lien (sur mobile)
            const navLinks = document.querySelectorAll('.dashboard-nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', function() {
                    if (window.innerWidth < 992) {
                        sidebar.classList.remove('active');
                    }
                });
            });
        }
    });
</script>

{% endblock %}
