            </tbody>
        </table>

        <div class="dashboard-section mt-20">
            <h3>{% if editRoom %}Edit Room{% else %}Add New Room{% endif %}</h3>
            {{ form_start(roomForm, {'attr': {'class': 'dashboard-form'}}) }}
            {{ form_widget(roomForm) }}
            <button type="submit" class="btn btn-success">{% if editRoom %}Update{% else %}Save{% endif %}</button>
            {% if editRoom %}
                <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">Cancel</a>
            {% endif %}
            {{ form_end(roomForm) }}
        </div>
    </div>

    <!-- Reservations Section -->
    <div id="reservations" class="dashboard-section">
        <h2>Reservations</h2>
        <form method="get" class="search-form">
            <input type="text" name="res_hotel_search" placeholder="Search by hotel name" value="{{ search.resHotel }}">
            <input type="text" name="res_room_search" placeholder="Search by room number" value="{{ search.resRoom }}">
            <input type="text" name="res_user_search" placeholder="Search by guest email" value="{{ search.resUser }}">
            <button type="submit" class="btn">Search</button>
            <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">Clear</a>
        </form>

        <div style="overflow-x:auto;">
        <table class="dashboard-table" style="min-width:1000px;">
            <thead>
                <tr>
                    <th style="width:40px;">ID</th>
                    <th style="width:140px;">Hotel</th>
                    <th style="width:180px;">Address</th>
                    <th style="width:80px;">Room Number</th>
                    <th style="width:110px;">Room Type</th>
                    <th style="width:90px;">Room Price</th>
                    <th style="width:170px;">User</th>
                    <th style="width:120px;">Check-in</th>
                    <th style="width:120px;">Check-out</th>
                    <th style="width:110px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for res in reservations %}
                    <tr>
                        <td>{{ res.id }}</td>
                        <td>{{ res.room.hotel.name }}</td>
                        <td>{{ res.room.hotel.address }}</td>
                        <td>{{ res.room.number }}</td>
                        <td>
                            <span class="status-badge status-active">{{ res.room.type }}</span>
                        </td>
                        <td>${{ res.room.price }}</td>
                        <td>{{ res.user.email }}</td>
                        <td>{{ res.startDate|date('Y-m-d H:i') }}</td>
                        <td>{{ res.endDate|date('Y-m-d H:i') }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_dashboard') }}?edit_reservation={{ res.id }}#reservations" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="{{ path('dashboard_reservation_cancel', { id: res.id }) }}" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to cancel this reservation?');">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                            </div>
                        </td>
                    </tr>
